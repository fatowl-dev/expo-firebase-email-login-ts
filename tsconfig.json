{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6",
      "es2017"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "baseUrl": "./", // all paths are relative to the baseUrl
    "paths": {
      "app/*": [
        "*"
      ] // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`kk
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}